rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Règles pour les documents - accès public en lecture, écriture pour les utilisateurs authentifiés
    match /documents/{allPaths=**} {
      allow read: if true; // Accès public en lecture
      allow write: if request.auth != null; // Écriture pour les utilisateurs authentifiés
    }
    
    // Règles pour les QR codes des documents
    match /qr-codes/documents/{allPaths=**} {
      allow read: if true; // Accès public en lecture
      allow write: if request.auth != null; // Écriture pour les utilisateurs authentifiés
    }
    
    // Règles pour les photos de profil
    match /profile-photos/{allPaths=**} {
      allow read: if true; // Accès public en lecture
      allow write: if request.auth != null; // Écriture pour les utilisateurs authentifiés
    }
    
    // Règles pour les autres fichiers
    match /{allPaths=**} {
      allow read: if true; // Accès public en lecture
      allow write: if request.auth != null; // Écriture pour les utilisateurs authentifiés
    }
  }
}
